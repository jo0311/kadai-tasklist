<h1>ログインページ</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

  <%= f.label :email, 'メール' %>
  <%= f.email_field :email %>
  
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
  
  <%= f.submit 'ログイン' %>
<% end %>

<p>新規のユーザーですか? <%= link_to '新規作成する', signup_path %></p>
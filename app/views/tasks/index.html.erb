<% if logged_in? %>
  <p>お帰りなさい、<%= current_user.name %>さん</p>
<% end %>

<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %>, by <%= task.user.name %></li>
  <% end %>
</ul>

<%= link_to '新規タスクの作成', new_task_path %>
<%= link_to 'ログアウトする', logout_path, method: :delete %>